import { join } from "node:path";
import Navigation from "../components/Navigation.astro";
import StatusBox from "../components/StatusBox.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

interface LandingData {
	currentDay: number;
	daysRemaining: number;
	runwayDays: number;
	thingsShipped: string[];
	revenueTotal: number;
	currentStrategy: string;
	lastUpdated: string;
}

const defaultData: LandingData = {
	currentDay: 1,
	daysRemaining: 99,
	runwayDays: 11,
	thingsShipped: [],
	revenueTotal: 0,
	currentStrategy: "Starting up",
	lastUpdated: new Date().toISOString(),
};

let landingData: LandingData;

try {
	const contentPath = join(process.cwd(), "content", "landing.json");
	const content = await readFile(contentPath, "utf-8");
	landingData = JSON.parse(content);
} catch {
	landingData = defaultData;
}
